# Matplotlib style used to create figures used in my thesis. Based on seaborn's default style
# To make this style available to use symlink this file to lib/python/site-packages/matplotlib/mpl-data/stylelib/

axes.axisbelow: True
axes.edgecolor: white
axes.facecolor: EAEAF2
axes.grid: False
axes.labelcolor: .15
axes.labelsize: 10
axes.linewidth: 0
axes.prop_cycle: cycler('color', ['4C72B0', '55A868', 'C44E52', '8172B2', 'CCB974', '64B5CD'])

figure.facecolor: white
# Default size of single figure spanning textwidth of thesis
figure.figsize: 5.90551196900512, 3.6498071178144804

font.family: serif
font.size: 10

grid.color: white
grid.linestyle: -
grid.linewidth: 1

image.cmap: Greys

legend.fontsize: 8
legend.frameon: False
legend.numpoints: 1
legend.scatterpoints: 1

lines.antialiased: True
lines.linewidth: 1.25
lines.markeredgewidth: 0
lines.markersize: 7
lines.solid_capstyle: round

patch.facecolor: 4C72B0
patch.linewidth: .3

text.usetex: True
text.latex.preamble: \usepackage{bm}
text.color: .15

xtick.color: .15
xtick.labelsize: 8
xtick.direction: out
xtick.major.pad: 10
xtick.major.size: 0
xtick.major.width: 1
xtick.minor.size: 0
xtick.minor.width: .5


ytick.color: .15
ytick.labelsize: 8
ytick.direction: out
ytick.major.pad: 10
ytick.major.size: 0
ytick.major.width: 1
ytick.minor.size: 0
ytick.minor.width: .5

savefig.bbox: tight
savefig.format: pdf
savefig.pad_inches: 0
